{
    "extends": [
        "config:base",
        ":automergeDisabled",
        "group:recommended",
        "group:allNonMajor"
    ],
    "timezone": "Europe/Paris",
    "commitMessagePrefix": "⬆️",
    "prConcurrentLimit": 5,
    "commitBodyTable": true,
    "packageRules": [
        {
            "matchPaths": [".github/**"],
            "groupName": "github"
        },
        {
            "matchDatasources": ["gradle-version"],
            "groupName": "gradle",
            "automerge": true,
            "automergeSchedule": ["at any time"],
            "rebaseWhen": "behind-base-branch"
        },
        {
            "matchPackagePrefixes": ["com.zaxxer:HikariCP", "org.postgresql", "app.cash.sqldelight"],
            "groupName": "database",
            "rebaseWhen": "behind-base-branch"
        },
        {
            "matchPackagePrefixes": ["io.ktor"],
            "groupName": "ktor",
            "automerge": true,
            "automergeSchedule": ["at any time"],
            "rebaseWhen": "behind-base-branch"
        },
        {
            "matchPackagePrefixes": ["io.arrow-kt"],
            "groupName": "arrow",
            "automerge": true,
            "automergeSchedule": ["at any time"],
            "rebaseWhen": "behind-base-branch"
        },
        {
            "matchPackagePrefixes": ["org.jetbrains.kotlinx.kover", "com.diffplug.spotless", "klint"],
            "groupName": "tools",
            "automerge": true,
            "automergeSchedule": ["at any time"],
            "rebaseWhen": "behind-base-branch"
        },
        {
            "matchPackagePrefixes": ["org.junit", "io.mockk", "klint"],
            "groupName": "tests-tools",
            "automerge": true,
            "automergeSchedule": ["at any time"],
            "rebaseWhen": "behind-base-branch"
        },
        {
            "matchPackagePrefixes": ["org.jetbrains.kotlin"],
            "groupName": "kotlin",
            "automerge": true,
            "automergeSchedule": ["at any time"],
            "rebaseWhen": "behind-base-branch"
        },
        {
            "matchPackagePrefixes": ["com.mindee.sdk"],
            "groupName": "mindee",
            "automerge": true,
            "automergeSchedule": ["at any time"],
            "rebaseWhen": "behind-base-branch"
        },
        {
            "matchPackagePrefixes": ["ch.qos.logback"],
            "groupName": "log",
            "automerge": true,
            "automergeSchedule": ["at any time"],
            "rebaseWhen": "behind-base-branch"
        },
        {
            "matchPackageNames": ["org.jetbrains.kotlinx:kotlinx-datetime"],
            "groupName": "date",
            "automerge": true,
            "automergeSchedule": ["at any time"],
            "rebaseWhen": "behind-base-branch"
        },
        {
            "matchPackagePrefixes": ["com.sksamuel.hoplite"],
            "groupName": "hoplite",
            "automerge": false,
            "automergeSchedule": ["at any time"],
            "rebaseWhen": "behind-base-branch"
        }
    ]
}